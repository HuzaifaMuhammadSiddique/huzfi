  def cyclic_shift_left(list_name):
    """ This function shifts all the elements of a list to the left by one index.
        The rightmost index or the last index is replaced by the value at the first index """
  
    new_list = []

    for index in range(2, list_name[-1]):
      new_list.append(list_name[index - 1])

    new_list.append(list_name[-1])
    new_list.append(list_name[0])
    
    return new_list
